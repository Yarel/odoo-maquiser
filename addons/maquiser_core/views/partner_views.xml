<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista de Contactos Heredada -->
    <record id="view_partner_form_maquiser" model="ir.ui.view">
        <field name="name">res.partner.form.maquiser</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Campos en pestaña general -->
            <xpath expr="//field[@name='function']" position="after">
                <field name="tipo_documento" widget="radio"/>
                <field name="numero_documento"/>
                <field name="empresa_asociada"/>
            </xpath>

            <!-- Pestaña personalizada -->
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="Datos Textiles" name="maquiser_textil_data">
                    <group>
                        <field name="es_cliente_uniformes"/>
                        <field name="es_proveedor_textil"/>
                        <field name="categoria_textil" widget="many2many_tags"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Menú Principal -->
    <menuitem id="menu_maquiser_root" name="Maquiser" sequence="10"/>

    <!-- Submenú Contactos -->
    <menuitem id="menu_maquiser_contactos" 
              name="Contactos" 
              parent="menu_maquiser_root" 
              sequence="20"/>

    <!-- Acción para Contactos -->
    <record id="action_res_partner_maquiser" model="ir.actions.act_window">
        <field name="name">Contactos Maquiser</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'default_company_type': 'company'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Crea tu primer contacto</p>
        </field>
    </record>

    <!-- Enlace Menú-Acción -->
    <menuitem id="menu_res_partner_maquiser" 
              name="Todos los Contactos" 
              parent="menu_maquiser_contactos" 
              action="action_res_partner_maquiser" 
              sequence="10"/>
</odoo>