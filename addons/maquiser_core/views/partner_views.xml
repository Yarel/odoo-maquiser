<odoo>
    <record id="view_maquiser_partner_tree" model="ir.ui.view">
        <field name="name">maquiser.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="city"/>
                <field name="vat"/>
                <field name="customer_rank"/>
                <field name="supplier_rank"/>
            </tree>
        </field>
    </record>

    <record id="view_maquiser_partner_form" model="ir.ui.view">
        <field name="name">maquiser.partner.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="vat"/>
                    <field name="street"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="company_type"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_maquiser_partner" model="ir.actions.act_window">
        <field name="name">Contactos Maquiser</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_maquiser_partner" name="Contactos"
              parent="menu_maquiser_root"
              action="action_maquiser_partner"
              sequence="70"/>
</odoo>

