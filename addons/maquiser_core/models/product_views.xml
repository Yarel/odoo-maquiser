from odoo import models, fields

class ProductTemplate(models.Model):
    _inherit = 'product.template'
    
    # Campos específicos para textiles
    textile_composition = fields.Char('Composición')
    textile_weight = fields.Char('Peso (g/m²)')
    textile_width = fields.Float('Ancho (m)')
    is_uniform = fields.Boolean('Es Uniforme')
    care_instructions = fields.Text('Instrucciones de Cuidado')
    
class ProductProduct(models.Model):
    _inherit = 'product.product'
    
    textile_lot = fields.Char('Lote Textil', tracking=True)
